<%- include('header', { currentPage: 'add' }); -%>
    <div id="colorlib-main">
        <section class="ftco-section pt-4 mb-5 ftco-intro">
            <div class="container-fluid px-3 px-md-0">
                <h3>Add new ebook</h3>
                <hr>
                <b>Enter the information mentioned below.</b>
                <form class="form-block" id="book-form" action="/add-book" method="POST">
                    
                    <label for="title">Title:</label>
                    <input type="text" id="title" name="title" value="" required></br>
                    <br><br>
                    <label for="author">Author:</label>
                    <input type="text" id="author" name="author" value="" required></br>
                    <br><br>
                    <label for="year">Year:</label>
                    <input type="text" id="year" name="year" value="" required></br>
                    <br><br><label for="genre">Genre:</label>
                    <input type="text" id="genre" name="genre" value="" required></br>
                    <br><br>
                    <label for="synopsis">Synopsis:</label>
                    <input type="text" id="synopsis" name="synopsis" value="" required></br>
                    <br><br>
                    <input type="submit" name="add" id="add" value="Submit"/>
                    <%-message%>
                </form>
            </div>
        </section>
    </div>

