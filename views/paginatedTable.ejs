<%- include('header', { currentPage: 'all' }); -%>
<div id="colorlib-main">
    <section class="ftco-section pt-4 mb-5 ftco-intro">
        <div class="container-fluid px-3 px-md-0">
            <h1>Books</h1>
            <table class="table">
                <thead>
                    <tr>
                        <th>Book Id</th>
                        <th>Title</th>
                        <th>Synopsis</th>
                        <th>Author</th>
                        <th>Year</th>
                        <th>Genre</th>
                    </tr>
                </thead>
                <tbody> 
                <% for(const obj of data){ %>
    <tr>
  <% for(const key in obj) { %>
   <td><%= obj[key] %></td>
  <% } %>
  </tr>
 <% } %>                
               </tbody>
            </table>

            <div class="navigation well-sm" id="pagination">
                <ul class="pager">
                    <%if(paginate.hasPreviousPages) {%>  
                        <li><a href="<%-paginate.href(true)%>" class="prev"><i class="fa fa-arrow-circle-left"></i>Previous</a></li>
                    <%}%>
                    <%for(let i=0; i< pages.length;i++) {%>
                        <%-pages[i]%>
                        <br>
                    <%}%>
                    <%if(paginate.hasNextPages(pageCount)) {%>  
                        <li><a href="<%-paginate.href()%>" class="next">Next&nbsp;<i class="fa fa-arrow-circle-right"></i></a></li>
                    <%}%>
                </ul>
            </div>
       </div>
    </section>
</div>

